<div class="container mt-2">
<h3>Create new comment</h3>
  <%= simple_form_for ([@super_power, @review]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :rating %>
      <%= f.input :comment %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Comment", class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
